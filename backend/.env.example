# =====================================================
# MAIRA Backend Environment Variables
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file with real credentials!
# =====================================================

# ---- LangSmith (Tracing & Monitoring) ----
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=your_project_name
LANGSMITH_TRACING_V2=true

# ---- LLM Providers ----

# Google Gemini (REQUIRED — used as default model & embeddings)
GEMINI_API_KEY=your_gemini_api_key_here

# Groq (optional — for LLaMA / GPT-OSS models)
GROQ_API_KEY=your_groq_api_key_here

# Anthropic (optional — for Claude models via Anthropic directly)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI (optional — used if OpenAI models are enabled)
OPENAI_API_KEY=your_openai_api_key_here

# Mistral (optional)
MISTRAL_API_KEY=your_mistral_api_key_here

# AWS Bedrock (optional — for Claude via AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ---- Search & Tools ----

# Tavily (REQUIRED — powers internet search tool)
TAVILY_API_KEY=your_tavily_api_key_here

# ---- Supabase (REQUIRED — Database & Storage) ----

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
MAIRA_PASSWORD=your_supabase_db_password_here

# ---- Redis / Upstash (optional — for caching) ----

UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here
UPSTASH_REDIS_URL=rediss://default:your_token@your-redis-url.upstash.io:6379

# ---- GitHub Integration (optional) ----

GITHUB_APP_ID=your_github_app_id
GITHUB_APP_PRIVATE_KEY=./path/to/private-key.pem
GITHUB_REPOSITORY=your-org/your-repo

# ---- Vector Store (optional — if using Qdrant instead of PGVector) ----

QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_ENDPOINT=https://your-qdrant-cluster.cloud.qdrant.io

# ---- Application Settings ----

# CORS allowed origins (comma-separated, defaults to * in dev)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Maximum file upload size in MB (default: 50)
MAX_UPLOAD_SIZE_MB=50
